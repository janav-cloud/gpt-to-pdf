{
  "manifest_version": 3,
  "name": "GPT to PDF Exporter",
  "version": "1.0",
  "description": "Export GPT conversations to PDF with customizable themes and fonts",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "public/icon16.png",
      "48": "public/icon48.png",
      "128": "public/icon128.png"
    }
  },
  "options_page": "src/options/index.html",
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  }
}